<div class="page-header">
  <%= link_to new_movie_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Movie
  <% end %>
  <h1 Listing>movies</h1>
</div>

<div class="container-fluid">
  <ul class="s-ul">
    <%- @movies.each do |movie| %>
    <li class="box">
      <%= link_to movie do %>
        <%= image_tag movie.movie_image_url %>
      <% end %>
      <div class="textline">
        <p><%= movie.title %></p>
      </div>
      <div class="textline">
        <p><%= movie.release_date %></p>
        <p><%= movie.runtime %> Mins.</p>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tmdb</th>
        <th>Description</th>
        <th>Release date</th>
        <th>Upc</th>
        <th>Runtime</th>
        <th>Tagline</th>
        <th>Movie Image URL</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @movies.each do |movie| %>
      <%= link_to movie do %>
        <%= image_tag movie.movie_image_url %>
      <% end %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.tmdb_id %></td>
        <td><%= movie.description %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.upc %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.tagline %></td>
        <td><%= movie.movie_image_url %></td>
        <td>
          <%= link_to movie do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_movie_path(movie) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to movie, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

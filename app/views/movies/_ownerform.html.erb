<%= form_for(@movie, html: { class: "form-horizontal new-movie-form", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @movie.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h4>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# upc %>
  <div class="form-group">
    <%= f.label :upc, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.number_field :upc, class: "form-control" %>
    </div>
  </div>

  <%# notes %>
  <div class="form-group">
    <%= f.label :notes, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :notes, class: "form-control" %>
    </div>
  </div>

  <%# image_upload %>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.hidden_field :image, value: @movie.cached_image_data %>
      <%= f.file_field :image %>
    </div>
  </div>

  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9" id="form-click">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>

<% end -%>

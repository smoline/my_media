<div class="container">
  <div class="page-header custom-header">
    <%= link_to movies_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>

    <a class="btn btn-default" id='btn-scanner'><span class="glyphicon glyphicon-barcode"></span> Search by UPC</a>

    <a class="btn btn-default" id='btn-title-search'><span class="glyphicon glyphicon-th"></span> Search by Title</a>

    <h1>New movie</h1>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div id='title-search'>
        <div class="search-flexbox">
          <div class="form-inline">
            <div class="form-group">
              <%= text_field_tag :movie_title, params[:movie_title], id: 'movie-title', class: "form-control", placeholder: "Please type the Title of the Movie Here", style: 'width: 400px' %>
            </div>
            <div class="btn btn-default" id='search-title'>
              <span class="glyphicon glyphicon-search"></span> Search
            </div>
          </div>
        </div>
      </div>
      <div class="scanner-flexbox">
        <div class="panel panel-default" id='show-scanner'>
          <div class="panel-heading">
            <h3 class="panel-title barcode-scanner-title">Barcode Scanner</h3>
          </div>
          <div class="panel-body">
            <div id='barcode-scanner'></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <%= render 'form' %>
    </div>
  </div>
</div>


<div class="modal fade" id="choose-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Click on the correct Item</h4>
      </div>
      <div class="modal-body">
        <ul class="custom-choice" id='movies-info'>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

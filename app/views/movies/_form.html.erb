<%= form_for(@movie, html: { class: "form-horizontal new-movie-form", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @movie.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h4>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# title %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <%# description %>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <%# release_date %>
  <div class="form-group">
    <%= f.label :release_date, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :release_date, class: "form-control" %>
    </div>
  </div>

  <%# runtime %>
  <div class="form-group">
    <%= f.label :runtime, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.number_field :runtime, class: "form-control" %>
    </div>
  </div>

  <%# tagline %>
  <div class="form-group">
    <%= f.label :tagline, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :tagline, class: "form-control" %>
    </div>
  </div>

  <%# tmdb_id %>
  <%= f.hidden_field :tmdb_id, class: "form-control" %>

  <%# image_url %>
  <div class="form-group">
    <%= f.label :movie_image_url, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :movie_image_url, class: "form-control" %>
    </div>
  </div>

  <%= f.fields_for :owners, @owner_info do |builder| %>
    <%= render 'ownerform', f: builder %>
  <% end %>

  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9" id="form-click">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>

<% end -%>

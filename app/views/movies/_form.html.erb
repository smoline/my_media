<%= form_for(@movie, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @movie.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h4>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# title %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>


  <%# tmdb_id %>
  <div class="form-group">
    <%= f.label :tmdb_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :tmdb_id, class: "form-control" %>
    </div>
  </div>


  <%# description %>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>


  <%# release_date %>
  <div class="form-group">
    <%= f.label :release_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :release_date, class: "form-control" %>
    </div>
  </div>


  <%# runtime %>
  <div class="form-group">
    <%= f.label :runtime, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :runtime, class: "form-control" %>
    </div>
  </div>


  <%# tagline %>
  <div class="form-group">
    <%= f.label :tagline, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :tagline, class: "form-control" %>
    </div>
  </div>

  <%# upc %>
  <div class="form-group">
    <%= f.label :upc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :upc, class: "form-control" %>
    </div>
  </div>

  <%# image_url %>
  <div class="form-group">
    <%= f.label :movie_image_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :movie_image_url, class: "form-control" %>
    </div>
  </div>

  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>

<% end -%>


  <div class='col-md-8'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Barcode Scanner</h3>
      </div>
      <div class="panel-body">
        <div id='barcode-scanner'></div>
      </div>
    </div>
  </div>
</div>

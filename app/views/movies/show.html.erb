<div class="page-header">
  <%= link_to movies_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to @movie, class:'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } do %>
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    Delete
  <% end %>
  <%= link_to edit_movie_path(@movie), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show movie</h1>
</div>

<dl class="dl-horizontal">
  <dd><%= image_tag @movie.movie_image_url %></dd>

  <dt>Title:</dt>
  <dd><%= @movie.title %></dd>

  <dt>Tmdb:</dt>
  <dd><%= @movie.tmdb_id %></dd>

  <dt>Release date:</dt>
  <dd><%= @movie.release_date %></dd>

  <dt>Upc:</dt>
  <dd><%= @movie.upc %></dd>

  <dt>Runtime:</dt>
  <dd><%= @movie.runtime %></dd>

  <dt>Tagline:</dt>
  <dd><%= @movie.tagline %></dd>

  <dt>Description:</dt>
  <dd><%= @movie.description %></dd>

</dl>

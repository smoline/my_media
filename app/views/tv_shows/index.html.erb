<div class="container">
  <div class="page-header custom-header">
    <div class="header-flexbox">
      <div class="flextitle">
        <h1 Listing>TV Shows </h1>
      </div>
      <div class="social-flexbox">
        <div class="well well-sm custom-well text-center">
          <h5>Share what you are watching with your friends!</h5>
          <div class="text-center">
            <%= social_share_button_tag %>
          </div>
        </div>
      </div>
      <div>
      <%= link_to new_tv_show_path, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-plus"></span>
        New TV Show
      <% end %>
    </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="s-ul">
    <%= render @tv_shows %>
  </div>

  <div class="text-center" id='paginator'>
    <%= paginate @tv_shows, remote: true %><br>
    <%= page_entries_info @tv_shows %>
    <p>Logged in as <%= current_user.email %></p>
  </div>
  <div class="col-md-2 col-md-offset-10 text-center api-logo">
      <a href="https://www.themoviedb.org/?language=en" height="50px"><%= image_tag("408x161-powered-by-rectangle-green sm.png") %></a>
  </div>
</div>

<div class="container">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>tmdb show id</th>
        <th>Overview</th>
        <th>First air date</th>
        <th>Last air date</th>
        <th>Number of seasons</th>
        <th>Number of episodes</th>
        <th>Show poster path</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.tmdb_show_id %></td>
        <td><%= tv_show.overview %></td>
        <td><%= tv_show.first_air_date %></td>
        <td><%= tv_show.last_air_date %></td>
        <td><%= tv_show.number_of_seasons %></td>
        <td><%= tv_show.number_of_episodes %></td>
        <td><%= tv_show.show_poster_path %></td>
        <td>
          <%= link_to tv_show do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tv_show_path(tv_show) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to tv_show, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

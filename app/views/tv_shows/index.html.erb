<div class="page-header">
  <%= link_to new_tv_show_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Tv show
  <% end %>
  <h1 Listing>tv_shows</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Tmdb show</th>
        <th>Overview</th>
        <th>First air date</th>
        <th>Last air date</th>
        <th>Number of seasons</th>
        <th>Number of episodes</th>
        <th>Show poster path</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.tmdb_show_id %></td>
        <td><%= tv_show.overview %></td>
        <td><%= tv_show.first_air_date %></td>
        <td><%= tv_show.last_air_date %></td>
        <td><%= tv_show.number_of_seasons %></td>
        <td><%= tv_show.number_of_episodes %></td>
        <td><%= tv_show.show_poster_path %></td>
        <td>
          <%= link_to tv_show do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tv_show_path(tv_show) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to tv_show, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

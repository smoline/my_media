<%= form_for(@tv_show, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @tv_show.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@tv_show.errors.count, "error") %> prohibited this tv_show from being saved:</h4>

      <ul>
      <% @tv_show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# name %>
  <div class="form-group">
    <%= f.label(:name, "TV Show Name", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>


  <%# tmdb_show_id %>
  <div class="form-group">
    <%= f.label(:tmdb_show_id, "TMDb Show ID", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.number_field :tmdb_show_id, class: "form-control" %>
    </div>
  </div>


  <%# overview %>
  <div class="form-group">
    <%= f.label(:overview, "Show Overview", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field :overview, class: "form-control" %>
    </div>
  </div>


  <%# first_air_date %>
  <div class="form-group">
    <%= f.label(:first_air_date, "First Air Date", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field :first_air_date, class: "form-control" %>
    </div>
  </div>


  <%# last_air_date %>
  <div class="form-group">
    <%= f.label(:last_air_date, "Last Air Date", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field :last_air_date, class: "form-control" %>
    </div>
  </div>


  <%# number_of_seasons %>
  <div class="form-group">
    <%= f.label(:number_of_seasons, "# of Seasons", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.number_field :number_of_seasons, class: "form-control" %>
    </div>
  </div>


  <%# number_of_episodes %>
  <div class="form-group">
    <%= f.label(:number_of_episodes, "# of Episodes", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.number_field :number_of_episodes, class: "form-control" %>
    </div>
  </div>


  <%# show_poster_path %>
  <div class="form-group">
    <%= f.label(:show_poster_path, "Show Image Link", class: "col-sm-3 control-label") %>
    <div class="col-sm-9">
      <%= f.text_field :show_poster_path, class: "form-control" %>
    </div>
  </div>

  <%= f.fields_for :tv_seasons, @tv_season_info do |builder| %>
    <%= render 'tvseasonform', f: builder %>
  <% end %>

  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end -%>

<div class="page-header">
  <%= link_to new_tv_episode_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Tv episode
  <% end %>
  <h1 Listing>tv_episodes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tmdb episode</th>
        <th>Description</th>
        <th>Air date</th>
        <th>Episode number</th>
        <th>Season number</th>
        <th>Tvshow image url</th>
        <th>Created by</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @tv_episodes.each do |tv_episode| %>
      <tr>
        <td><%= tv_episode.title %></td>
        <td><%= tv_episode.tmdb_episode_id %></td>
        <td><%= tv_episode.description %></td>
        <td><%= tv_episode.air_date %></td>
        <td><%= tv_episode.episode_number %></td>
        <td><%= tv_episode.season_number %></td>
        <td><%= tv_episode.tvshow_image_url %></td>
        <td><%= tv_episode.created_by_id %></td>
        <td>
          <%= link_to tv_episode do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tv_episode_path(tv_episode) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to tv_episode, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

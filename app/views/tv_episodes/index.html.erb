<div class="container">
  <div class="page-header custom-header">
    <div class="header-flexbox">
      <div class="flextitle">
        <h1 Listing>TV Episodes </h1>
      </div>
      <div class="social-flexbox">
        <div class="well well-sm custom-well text-center">
          <h5>Share what you are watching with your friends!</h5>
          <div class="text-center">
            <%= social_share_button_tag %>
          </div>
        </div>
      </div>
      <div>
        <%= link_to new_tv_episode_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-plus"></span>
          New TV Episode
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="s-ul">
    <%= render @tv_episodes %>
  </div>
  <div class="text-center" id='paginator'>
    <%= paginate @tv_episodes, remote: true %><br>
    <%= page_entries_info @tv_episodes %>
    <p>Logged in as <%= current_user.email %></p>
  </div>
  <div class="col-md-2 col-md-offset-10 text-center api-logo">
      <a href="https://www.themoviedb.org/?language=en" height="50px"><%= image_tag("408x161-powered-by-rectangle-green sm.png") %></a>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tmdb episode</th>
        <th>Description</th>
        <th>Air date</th>
        <th>Episode number</th>
        <th>Season number</th>
        <th>Tvshow image url</th>
        <th>TV Season</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @tv_episodes.each do |tv_episode| %>
      <tr>
        <td><%= tv_episode.title %></td>
        <td><%= tv_episode.tmdb_episode_id %></td>
        <td><%= tv_episode.description %></td>
        <td><%= tv_episode.air_date %></td>
        <td><%= tv_episode.episode_number %></td>
        <td><%= tv_episode.season_number %></td>
        <td><%= tv_episode.tvshow_image_url %></td>
        <td><%= tv_episode.tv_season %></td>
        <td>
          <%= link_to tv_episode do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tv_episode_path(tv_episode) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to tv_episode, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= form_for(@game, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @game.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h4>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# title %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>


  <%# brand %>
  <div class="form-group">
    <%= f.label :brand, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :brand, class: "form-control" %>
    </div>
  </div>


  <%# console_type %>
  <div class="form-group">
    <%= f.label :console_type, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :console_type, class: "form-control" %>
    </div>
  </div>


  <%# release_date %>
  <div class="form-group">
    <%= f.label :release_date, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :release_date, class: "form-control" %>
    </div>
  </div>


  <%# description %>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>


  <%# upc %>
  <div class="form-group">
    <%= f.label :upc, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.number_field :upc, class: "form-control" %>
    </div>
  </div>


  <%# game_image_url %>
  <div class="form-group">
    <%= f.label :game_image_url, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :game_image_url, class: "form-control" %>
    </div>
  </div>


  <%# image_upload %>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.hidden_field :image, value: @game.cached_image_data %>
      <%= f.file_field :image %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end -%>

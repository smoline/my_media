<div class="container">
  <div class="page-header custom-header">
    <div class="header-flexbox">
      <div class="flextitle">
        <h1 Listing>TV Seasons </h1>
      </div>
      <div class="social-flexbox">
        <div class="well well-sm custom-well text-center">
          <h5>Share what you are watching with your friends!</h5>
          <div class="text-center">
            <%= social_share_button_tag %>
          </div>
        </div>
      </div>
      <div>
        <%= link_to new_tv_season_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-plus"></span>
          New TV Season
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Tmdb season</th>
        <th>Tv show</th>
        <th>Overview</th>
        <th>Air date</th>
        <th>Season number</th>
        <th>Season poster path</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body">
      <%- @tv_seasons.each do |tv_season| %>
      <tr>
        <td><%= tv_season.name %></td>
        <td><%= tv_season.tmdb_season_id %></td>
        <td><%= tv_season.tv_show %></td>
        <td><%= tv_season.overview %></td>
        <td><%= tv_season.air_date %></td>
        <td><%= tv_season.season_number %></td>
        <td><%= tv_season.season_poster_path %></td>
        <td>
          <%= link_to tv_season do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tv_season_path(tv_season) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to tv_season, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
